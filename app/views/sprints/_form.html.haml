= form_for(@sprint) do |f|
  - if @sprint.errors.any?
    %div{ :id => "error_explanation" }
      %h2= pluralize(@sprint.errors.count, "error") + " prohibited this sprint from being saved:"
      %ul
      - @sprint.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :name 
    %br/
    = f.text_field :name 
  .field
    = f.label :start_date
    %br/
    = f.date_select :start_date
  .field
    = f.label :duration 
    %br/
    = f.text_field :duration
  .field
    = f.label :total_points
    %br/
    = f.text_field :total_points
  .actions
    = f.submit

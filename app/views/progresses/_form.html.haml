= form_for([@sprint, @progress]) do |f|
  - if (@error_messages.any?)
    #error_explanation
      %h2= pluralize(@error_messages.count, "error") + ' prohibited this progress from being saved:'
      %ul
        - @error_messages.each do |msg|
          %li= msg
  .field
    = f.label :description 
    %br
    = f.text_field :description
  .field
    = f.label :points
    %br 
    = f.text_field :points 
  .field
    = f.label :apply_date 
    %br
    = f.date_select :apply_date
  .actions
    = f.submit